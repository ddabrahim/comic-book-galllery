@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ViewBag.SeriesTitle + " Detail";

}

<h1>@ViewBag.SeriesTitle</h1>
<h2>Issue: #@ViewBag.IssueTitle</h2>

<h5>Description: </h5>
<div>@Html.Raw(ViewBag.Description)</div>

@if (ViewBag.Artists.Length > 0)
{
    <h4 style="font: bold">Artists:</h4>
    <div>
        <ul>
            @foreach (var artist in ViewBag.Artists)
            {
                <li>@artist</li>     
            }
        </ul>
    </div>
}

<script>
    alert("Hello JavaScript");
</script>

