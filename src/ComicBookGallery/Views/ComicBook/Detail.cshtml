@{
    Layout = null;

    var seriesTitle = "The Amazing Spider-Man";
    var issueTitle = 700;
    var description = "<p>Final issue</>";
    var artists = new string[]
    {
        "Script: Dan Slott",
        "Pencils: Humberto Ramos",
        "Inks: Victor Olazaba",
        "Colors: Edgar Delgado",
        "Letters: Chris Eliopoulos"
    };
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h1>@seriesTitle</h1>
        <h2>Issue: @issueTitle</h2>

        <h5>Description: </h5>
        <div>@Html.Raw(description)</div>

        @if (artists.Length > 0)
        {
            <h4 style="font: bold">Artists:</h4>
            <div>
                <ul>
                    @foreach (var artist in artists)
                    {
                        <li>@artist</li>     
                    }
                </ul>
            </div>
        }

        <script>
            alert("Hello JavaScript");
        </script>

    
    </div>
</body>
</html>
